generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Poem {
  id        Int      @default(autoincrement()) @id
  title     String
  createdAt DateTime @default(now())
  content   String?
  authorId  Int
  isHaiku   Boolean  @default(false)
}

model User {
  id                                                     Int                @default(autoincrement()) @id
  name                                                   String?
  email                                                  String             @unique
  profileid                                              Int?
}

model profile {
  id      Int     @default(autoincrement()) @id
  bio     String?
  favpoem String?
}

model userrelationship {
  id                                         Int    @default(autoincrement()) @id
  relatinguserid                             Int
  relateduserid                              Int
  relationshiptype                           status
}

enum status {
  blocked
  friend
  pending
}
