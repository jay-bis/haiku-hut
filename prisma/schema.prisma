generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Poem {
  id        Int      @default(autoincrement()) @id
  title     String
  createdAt DateTime @default(now())
  content   String?
  authorId  Int
  isHaiku   Boolean  @default(false)
  author    User     @relation(fields: [authorId], references: [id])
}

model User {
  id    Int     @default(autoincrement()) @id
  name  String?
  email String  @unique
}
